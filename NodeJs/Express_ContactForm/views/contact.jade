extends ./navbar.jade

block content
    .fixer
        .container
            form(method="post", action="/contact/send")
                h1 Contact
                hr  
                .form-group
                    label Name
                    input.form-control(type="text", name='name', placeholder="Enter Your Name")
                .form-group
                    label Email
                    input.form-control(type="text", name="email", placeholder="example@example.com")
                .form-group
                    label Message
                    textarea.form-control(name="message", placeholder="Enter Message")
                
                button.btn.btn-default(type="submit") Send
